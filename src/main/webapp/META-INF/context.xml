<Context docBase="liftBuddy" path="/LiftBuddy" reloadable="true">
    <!-- TODO !!!!!!!!! CHANGE DB NAME BEFORE PACKAGING !!!!!!!!! -->
    <Realm className="org.apache.catalina.realm.JDBCRealm"
           driverName="com.mysql.jdbc.Driver"
           connectionURL="jdbc:mysql://localhost:3306/liftbuddy?user=tomcat&amp;password=tomcat"
           userTable="user" userNameCol="user_name" userCredCol="password"
           userRoleTable="role" roleNameCol="role_name" >
    </Realm>
    <CredentialHandler
            className="org.apache.catalina.realm.MessageDigestCredentialHandler"
            algorithm="sha-256"
            encoding="Hex" />
</Context>